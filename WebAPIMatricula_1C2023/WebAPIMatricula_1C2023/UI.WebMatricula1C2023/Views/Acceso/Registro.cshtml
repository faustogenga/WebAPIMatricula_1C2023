@model UI.WebMatricula1C2023.Models.Users.RegisterModel
@{
    Layout = "~/Views/Shared/_ExternalLayout.cshtml";
}
<section class="vh-100 gradient-custom-2">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registro</h3>
                        @using (Html.BeginForm("Registrarme", "Acceso", FormMethod.Post))
                        {
                            <form>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            @Html.TextBoxFor(model => model.NombreCompleto, new {@class = "form-control" })
                                            <label class="form-label" for="NombreCompleto">Nombre Completo</label>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-4 d-flex align-items-center">
                                        <div class="form-outline datepicker w-100">
                                            @Html.TextBoxFor(model => model.Identificacion, new {@class = "form-control" })
                                            <label for="identificacion" class="form-label">Identificación</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline datepicker w-100">
                                            @Html.TextBoxFor(model => model.Username, new {@class = "form-control" })
                                            <label for="username" class="form-label">Username</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div class="form-outline">
                                            @Html.TextBoxFor(model => model.CorreoElectronico, new {@class = "form-control" })
                                            <label class="form-label" for="emailAddress">Correo electrónico</label>
                                        </div>

                                    </div>


                                </div>

                                <div class="row">

                                    <div class="col-md-6 mb-4 pb-2">
                                        <div class="form-outline">
                                            @Html.PasswordFor(model => model.Password, new {@class = "form-control" })
                                            <label class="form-label" for="password">Password</label>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-4 pb-2">
                                        <div class="form-outline">
                                            @Html.DropDownListFor(model => model.Estado, new SelectList(new[] { "Activo", "Inactivo" }), new { @class = "select form-control" })
                                            <label class="form-label" for="">Estado</label>
                                        </div>
                                    </div>

                                </div>
                                <div class="mt-4 pt-2">
                                    <input class="btn btn-primary" type="submit" value="Registrarme" />
                                    @if (ViewData.ModelState.ErrorCount > 0)
                                    {
                                        <div class="alert alert-danger hide" role="alert">
                                            @Html.ValidationMessage("LogOnError")
                                        </div>
                                    }
                                </div>

                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>