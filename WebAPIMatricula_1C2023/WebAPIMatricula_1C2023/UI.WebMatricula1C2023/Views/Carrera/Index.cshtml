@model IEnumerable<UI.WebMatricula1C2023.Models.Carrera.Salida.DatosCarrera>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <br />
    <h2>Gestión de Carreras</h2>

    <div class="container-fluid">
        <br />
        <div style="width:100%; margin:0 auto;">
            <button id='btnAbrirDialogAgregarCarrera' class="btn btn-primary" style="background-color: #1A2DF3; width:10%">Agregar</button>
            <br /><br />
            <table class="display" id="CarrerasTabla" style="width:100%">
                <thead>
                    <tr>
                        <th>Carrera</th>
                        <th>Sede</th>
                        <th>Cuatrimestres</th>
                        <th>Idioma</th>
                        <th>MateriasMatriculadas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id='NombreParam'>
                                @Html.DisplayFor(modelItem => item.Carrera)
                            </td>
                            <td id='CorreoElectronicoParam'>
                                @Html.DisplayFor(modelItem => item.Sede)
                            </td>
                            <td id='HorarioParam'>
                                @Html.DisplayFor(modelItem => item.Cuatrimestres)
                            </td>
                            <td id='UbicacionParam'>
                                @Html.DisplayFor(modelItem => item.Idioma)
                            </td>
                            <td id='ContactoParam'>
                                @Html.DisplayFor(modelItem => item.MateriasMatriculadas)
                            </td>
                            <td style="align-items:center">
                                <a name="btnEditarCarrera" data-id="@item.Codigo" style="color: #1A2DF3"><i class="fa fa-edit"></i></a>
                                <a name="btnEliminarCarrera" data-id="@item.Codigo" style="color: #1A2DF3"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div id="modalAgregarCarrera" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Carrera</h4>
                </div>
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <div>
                        <label for="exampleInputEmail1">Código de Carrera:</label>
                        <input class="form-control" id="IDAgregarCarreraCodigo" disabled placeholder="Sin asignar">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite su Carrera:</label>
                        <input class="form-control" id="IDAgregarCarreraCarrera">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite la Sede:</label>
                        <input class="form-control" id="IDAgregarCarreraSede">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite los Cuatrimestres:</label>
                        <input class="form-control" id="IDAgregarCarreraCuatrimestres">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el Idioma:</label>
                        <input class="form-control" id="IDAgregarCarreraIdioma">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite cantidad de Materias Matriculadas:</label>
                        <select id="IDAgregarCarreraMateriasMatriculadas" class="select form-control">
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnCancelarCarrera' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button id='btnAgregarCarrera' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaExitosa" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>Transacción realizada exitosamente</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnMensajeExitosoCarrera' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaEliminarCarrera" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>¿Está seguro que desea eliminar el Carrera?</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnAceptarEliminarCarreraConfirmacion' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                    <button id='btnCancelarEliminarCarreraConfirmacion' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div>
        <div id="canvas-holder" style="width:40%">
            <canvas id="vistas-chart"></canvas>
        </div>
        <script>
            new Chart(document.getElementById("vistas-chart"), {
                type: 'pie',
                data: {
                    labels: @Html.Raw(ViewBag.Etiquetas),
                    datasets: [{
                        label: "Carreras por Idioma",
                        backgroundColor: @Html.Raw(ViewBag.Colores) ,
                        data: @Html.Raw(@ViewBag.Valores)
                                                            }]
                },
                options: {
                    title: {
                        display: true,
                        text: 'Carreras por Idioma'
                    }
                }
            });
        </script>
    </div>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @section scripts
        {
        <script src="~/Scripts/Carrera.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>

    }
</main>
