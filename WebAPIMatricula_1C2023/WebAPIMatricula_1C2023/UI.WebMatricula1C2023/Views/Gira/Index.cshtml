@model IEnumerable<UI.WebMatricula1C2023.Models.Gira.Salida.DatosGira>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <br />
    <h2>Gestión de Giras</h2>

    <div class="container-fluid">
        <br />
        <div style="width:100%; margin:0 auto;">
            <button id='btnAbrirDialogAgregarGira' class="btn btn-primary" style="background-color: #1A2DF3; width:10%">Agregar</button>
            <br /><br />
            <table class="display" id="GirasTabla" style="width:100%">
                <thead>
                    <tr>
                        <th>CodigoGira</th>
                        <th>Organizacion</th>
                        <th>Carreras</th>
                        <th>Fecha</th>
                        <th>HoraSalida</th>
                        <th>HoraRegreso</th>
                        <th>Tipo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id='IdentificacionParam'>
                                @Html.DisplayFor(modelItem => item.CodigoGira)
                            </td>
                            <td id='NombreParam'>
                                @Html.DisplayFor(modelItem => item.Organizacion)
                            </td>
                            <td id='CorreoElectronicoParam'>
                                @Html.DisplayFor(modelItem => item.Carreras)
                            </td>
                            <td id='FechaParam'>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td id='HoraSalidaParam'>
                                @Html.DisplayFor(modelItem => item.HoraSalida)
                            </td>
                            <td id='HoraregresoParam'>
                                @Html.DisplayFor(modelItem => item.HoraRegreso)
                            </td>
                            <td id='EstadoParam'>
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </td>
                            <td style="align-items:center">
                                <a name="btnEditarGira" data-id="@item.Codigo" style="color: #1A2DF3"><i class="fa fa-edit"></i></a>
                                <a name="btnEliminarGira" data-id="@item.Codigo" style="color: #1A2DF3"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div id="modalAgregarGira" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Gira</h4>
                </div>
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <div>
                        <label for="exampleInputEmail1">Código de Gira:</label>
                        <input class="form-control" id="IDAgregarGiraCodigo" disabled placeholder="Sin asignar">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el CodigoGira:</label>
                        <input class="form-control" id="IDAgregarGiraCodigoGira">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el Organizacion:</label>
                        <input class="form-control" id="IDAgregarGiraOrganizacion">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite las Carreras:</label>
                        <input class="form-control" id="IDAgregarGiraCarreras">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite la Fecha:</label>
                        <input class="form-control" id="IDAgregarGiraFecha">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite la HoraSalida:</label>
                        <input class="form-control" id="IDAgregarGiraHoraSalida">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite la HoraRegreso:</label>
                        <input class="form-control" id="IDAgregarGiraHoraRegreso">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el Tipo:</label>
                        <select id="IDAgregarGiraTipo" class="select form-control">
                            <option value="Vale por 1 Gira" selected>Vale por 1 Gira</option>
                            <option value="Vale por 2 Giras">Vale por 2 Giras</option>
                            <option value="Vale por 3 Giras">Vale por 3 Giras</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnCancelarGira' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button id='btnAgregarGira' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaExitosa" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>Transacción realizada exitosamente</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnMensajeExitosoGira' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaEliminarGira" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>¿Está seguro que desea eliminar el Gira?</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnAceptarEliminarGiraConfirmacion' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                    <button id='btnCancelarEliminarGiraConfirmacion' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div>
        <div id="canvas-holder" style="width:40%">
            <canvas id="vistas-chart"></canvas>
        </div>
        <script>
            new Chart(document.getElementById("vistas-chart"), {
                type: 'pie',
                data: {
                    labels: @Html.Raw(ViewBag.Etiquetas),
                    datasets: [{
                        label: "Giras por tipo",
                        backgroundColor: @Html.Raw(ViewBag.Colores) ,
                        data: @Html.Raw(@ViewBag.Valores)
                                    }]
                },
                options: {
                    title: {
                        display: true,
                        text: 'Giras por tipo'
                    }
                }
            });
        </script>
    </div>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @section scripts
        {
        <script src="~/Scripts/Gira.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>

    }
    </main>
